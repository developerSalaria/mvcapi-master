@using Newtonsoft.Json;
@using TPA.Common.Core.Model;
@model TPAClaim
@{
    Layout = null;
}
<style>
    .dataTable th {
        color: white !important;
    }

    table.dataTable td.dataTables_empty {
        text-align: center;
    }
</style>
<div class="row">
    <div class="col-lg-9 col-lg-9">
        <div class="row kt-margin-b-20">
            <div class="col-lg-6">
                <p class="font-weight-normal">Name :</p>
            </div>
            <div class="col-lg-6">
                <span>@Model.InsureName</span>
            </div>
            <div class="col-lg-6">
                <p class="font-weight-normal">Company Name :</p>
            </div>
            <div class="col-lg-6">
                <span>@Model.CompanyName</span>
            </div>
            <div class="col-lg-6">
                <p class="font-weight-normal">Gender :</p>
            </div>
            <div class="col-lg-6">
                <span>@Model.Gender</span>
            </div>
            <div class="col-lg-6">
                <p class="font-weight-normal">DOB :</p>

            </div>
            <div class="col-lg-6">
                <span>@Model.DOB</span>
            </div>
            <div class="col-lg-6">
                <p class="font-weight-normal">Employee Type :</p>

            </div>
            <div class="col-lg-6">
                <span>@Model.EmployeeType</span>
            </div>
            <div class="col-lg-6">
                <p class="font-weight-normal">Contact No. :</p>

            </div>
            <div class="col-lg-6">
                <span>@Model.PersonalTelNo</span>
            </div>
        </div>
    </div>
</div>

<div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4">
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <span  class="ml-1 "style="font-size:17px;color:#2e40d4ad;font-weight:700">Last 3 claims</span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" id="personsListDiv" style="display: none;">
            <table class="table table-striped- table-bordered table-hover table-checkable" id="myDatatable">
                <thead>
                    <tr style="background-color:#282f48;color:white;">
                        <th data-field="ID">Claim Id</th>
                        <th data-field="ClaimNo">Claim No</th>
                        <th data-field="Date">Date</th>
                        <th data-field="Action">View</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script>
     function loadClaimDetailsByClaimNo(claimId){
                $.ajax({
                    url: "@Url.Action("ViewClaim", "Claims")",
                    data: {
                        claimId: claimId,
                    },
                    success: function (html) {
                        $("#viewClaimsModalBody").html(html);
                        $("#viewClaimsModal").modal("show");
                    }
                })
            };
</script>

