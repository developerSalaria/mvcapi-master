                                    </div>
                                    <div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fa fa-paperclip"></i> @Common.Attachment
                                            <input type="file" name="attachment">
                                        </div>
                                        <p class="help-block">@Common.Max. 10MB</p>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> @Common.Send</button>
