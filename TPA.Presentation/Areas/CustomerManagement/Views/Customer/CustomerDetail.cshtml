@model TPA.Common.Core.Model.Customer
@using TPA.Common.Core.Resources
@using TPA.Presentation

@{
    ViewBag.Title = Common.CustomerProfile;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @Common.CustomerProfile
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>@Common.Home</a></li>
            <li><a href="#">@Common.CustomerInformation</a></li>
            <li class="active">@Common.CustomerProfile</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="~/Images/sharafDg.png" alt="User profile picture">

                        <h3 class="profile-username text-center">@Model.CustomerName</h3>

                        <p class="text-muted text-center">@Model.CustomerTypeName - @Model.CustomerClassName - @Model.CurrencyCode</p>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b onclick="SelectTab('Orders')" style="cursor: pointer;">@Common.Orders</b> <a class="pull-right">0</a>
                            </li>
                            <li class="list-group-item">
                                <b onclick="SelectTab('Invoices')" style="cursor: pointer;">@Common.Invoices</b> <a class="pull-right">0</a>
                            </li>
                            <li class="list-group-item">
                                <b onclick="SelectTab('Quotes')" style="cursor: pointer;">@Common.Quotes</b> <a class="pull-right">0</a>
                            </li>
                            <li class="list-group-item">
                                <b onclick="SelectTab('Email')" style="cursor: pointer;">@Common.SendEmail</b>
                            </li>
                        </ul>

                        @*<a href="#" class="btn btn-primary btn-block"><b>Follow</b></a>*@
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- About Me Box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">@Common.Summary</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <strong><i class="fa fa-book margin-r-5"></i> @Common.GeneralInformation</strong>

                        <p class="text-muted">
                            <b>@Common.Country: </b>@Model.CountryName<br />
                            <b>@Common.Nationality: </b>@Model.NationalityName<br />
                            <b>@Common.Email: </b> @Model.Email <br />
                            <b>@Common.PhoneNumber: </b>@Model.Phone - @Model.AnotherPhone

                        </p>
                        <hr>
                        <strong><i class="fa fa-map-marker margin-r-5"></i> @Common.Address </strong>

                        <p class="text-muted">
                            <b>@Common.State: </b>@Model.State
                            <b>@Common.Suburb: </b>@Model.Suburb <br />
                            <b>@Common.Street: </b>@Model.Street
                            <b>@Common.PostCode: </b>@Model.PostCode <br />
                        </p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i>@Common.Document</strong>
                        <p class="text-muted">

                            @if (Model.CustomerDocument != null)
                            {
                                <b>@Common.DocumentType: </b>@Model.CustomerDocument.DocumentTypeName<br />
                                <b>@Common.DocumentNumber: </b>@Model.CustomerDocument.DocumentNumber<br />
                                <b>@Common.DocumentIssueBy: </b>@Model.CustomerDocument.DocumentIssueBy<br />
                                <b>@Common.DocumentIssueDate: </b>@Convert.ToDateTime(Model.CustomerDocument.DocumentIssueDate).ToString(CultureHelper.DateFormat) <br />
                                <b>@Common.DocumentExpiryDate: </b>@Convert.ToDateTime(Model.CustomerDocument.DocumentExpiryDate).ToString(CultureHelper.DateFormat) <br />
                            }
                        </p>

                        <hr>

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#activity" data-toggle="tab">@Common.LastActivity</a></li>
                        <li><a href="#Orders" data-toggle="tab">@Common.Orders</a></li>
                        <li><a href="#Invoices" data-toggle="tab">@Common.Invoices</a></li>
                        <li><a href="#Quotes" data-toggle="tab">@Common.Quotes</a></li>
                        <li><a href="#Email" data-toggle="tab">@Common.Email</a></li>
                    </ul>
