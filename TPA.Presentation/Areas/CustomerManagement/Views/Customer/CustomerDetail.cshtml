@section scripts {

    @Scripts.Render("~/bundles/ForEditorOnly")

    <script>

        function SelectTab(tabName) {
            $('.nav-tabs a[href="#' + tabName + '"]').tab('show');
        }

        $(function () {


            // $('.nav-tabs a[href="#CRV"]').tab('show');

